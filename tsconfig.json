{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["ES2019"],
    "module": "commonjs",
    "target": "ES2019",
    "sourceMap": false,
    "outDir": "lib",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".temp"]
}
